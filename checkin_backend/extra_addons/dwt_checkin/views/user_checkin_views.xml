<?xml version='1.0' encoding='utf-8' ?>

<odoo>
    <data>
        <record id="user_checkin_submenu_act" model = "ir.actions.act_window">
            <field name ="name">User CheckIn</field>
            <field name ="type">ir.actions.act_window</field>
            <field name="res_model">mobile.user_checkin</field>
            <field name ="view_model">tree, form</field>
        </record>

        <record id="user_checkin_view_filter" model="ir.ui.view">
            <field name="name">user_checkin.view_filter</field>
            <field name="model">mobile.user_checkin</field>
            <field name="arch" type="xml">
                <search string="CheckIn">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="password"/>
                </search>
            </field>
        </record>


        <record id="user_checkin_view_tree" model="ir.ui.view">
            <field name="name">user_checkin.view_tree</field>
            <field name="model">mobile.user_checkin</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Checkin">
                    <field name="name"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>

        <record id="user_checkin_view_form" model="ir.ui.view">
            <field name="name">user_checkin.view_form</field>
            <field name="model">mobile.user_checkin</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="CheckIn">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="password"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>